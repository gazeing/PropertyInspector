<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/medium_space"
        tools:context=".ui.EditFragment">

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:contentDescription="@string/house_photo"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/addressTextView"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/houseTypeTextView"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/house_type" />

        <TextView
            android:id="@+id/houseSizeTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/house_size" />

        <EditText
            android:id="@+id/houseSizeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/house_size"
            android:inputType="number" />

        <TextView
            android:id="@+id/landShapeTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/land_shape" />

        <RadioGroup
            android:id="@+id/landShapeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium_space">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/landShapeRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/square" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/landShapeRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/triangle" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/landShapeRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/axe" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/landShapeRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ladder" />

        </RadioGroup>

        <TextView
            android:id="@+id/bedroomNumbersTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bedroom_numbers" />

        <EditText
            android:id="@+id/bedroomNumbersEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bedroom_numbers"
            android:inputType="number" />

        <TextView
            android:id="@+id/MasterRoomSizeTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/master_room_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/MasterRoomLengthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/length"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/multiply"
                android:textSize="@dimen/largeText" />

            <EditText
                android:id="@+id/MasterRoomWidthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/width"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/equal"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/MasterRoomSizeResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 m2" />
        </LinearLayout>

        <TextView
            android:id="@+id/MasterRoomBathroomTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/master_room_bathroom" />

        <RadioGroup
            android:id="@+id/masterRoomBathroomRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium_space">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/masterRoomBathroomRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/old" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/masterRoomBathroomRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usable" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/masterRoomBathroomRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_decoration" />

        </RadioGroup>

        <TextView
            android:id="@+id/MasterRoomDirectionTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/master_room_direction" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/MasterRoomDirectionCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="@dimen/medium_space"
            android:text="@string/face_northwest" />

        <TextView
            android:id="@+id/rampusTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rampus_or_study" />

        <RadioGroup
            android:id="@+id/rampusRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium_space">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rampusRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/absent" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rampusRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/without_door" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rampusRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/with_door" />

        </RadioGroup>

        <TextView
            android:id="@+id/grannyFlatTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grannyFlat" />


        <RadioGroup
            android:id="@+id/grannyFlatRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium_space">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/grannyFlatRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/absent" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/grannyFatRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/without_kitchen" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/grannyFlatRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/with_kitchen" />

        </RadioGroup>



        <TextView
            android:id="@+id/kitchenSizeTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kitchen_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/kitchenLengthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/length"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/multiply"
                android:textSize="@dimen/largeText" />

            <EditText
                android:id="@+id/kitchenWidthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/width"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/equal"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/kitchenSizeResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 m2" />
        </LinearLayout>

        <TextView
            android:id="@+id/livingAreaTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/living_area" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rampus" />

            <EditText
                android:id="@+id/rampusLengthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/length"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/multiply"
                android:textSize="@dimen/largeText" />

            <EditText
                android:id="@+id/rampusWidthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/width"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/equal"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/rampusSizeResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 m2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dinning" />

            <EditText
                android:id="@+id/dinningLengthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/length"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/multiply"
                android:textSize="@dimen/largeText" />

            <EditText
                android:id="@+id/dinningWidthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/width"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/equal"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/dinningSizeResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 m2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/family" />

            <EditText
                android:id="@+id/familyLengthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/length"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/multiply"
                android:textSize="@dimen/largeText" />

            <EditText
                android:id="@+id/familyWidthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/width"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/equal"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/familySizeResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 m2" />
        </LinearLayout>

        <TextView
            android:id="@+id/coveredCarParkTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/covered_carpark" />

        <EditText
            android:id="@+id/coveredCarParkEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/carpark_number"
            android:inputType="number" />

        <TextView
            android:id="@+id/uncoveredCarParkTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uncovered_carpark" />

        <EditText
            android:id="@+id/uncoveredCarParkEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/carpark_number"
            android:inputType="number" />

    </LinearLayout>
</ScrollView>